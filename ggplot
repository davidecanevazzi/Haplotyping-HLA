# ggplot2 examples
install.packages('patchwork')
library(ggplot2) 
library(patchwork) # To display 2 charts together
data= matrix(ncol = 2, nrow = 6 )
#colnames(data)=c('pmd','pmd+flye')
#rownames(data)=c('A1','A2','B1','B2','C1','C2')
